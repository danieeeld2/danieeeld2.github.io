---
import Layout from '../../layouts/Layout.astro';
import Nav from '../../components/Nav.astro';
import Hero from '../../components/Hero.astro';
import About from '../../components/About.astro';
import CV from '../../components/CV.astro';
import Projects from '../../components/Projects.astro';
import Hobbies from '../../components/Hobbies.astro';
import Blog from '../../components/Blog.astro';
import Footer from '../../components/Footer.astro';

import data from '../../data/en.json';

const lang = 'en';
---

<Layout title={data.meta.title} description={data.meta.description} lang={lang}>
  <Nav nav={data.nav} lang={lang} />
  <Hero hero={data.hero} lang={lang} />
  <About about={data.about} contact={data.contact} />
  <CV cv={data.cv} />
  <Projects projects={data.projects} />
  <Hobbies hobbies={data.hobbies} />
  <Blog blog={data.blog} lang={lang} />
  <Footer footer={data.footer} contact={data.contact} />
</Layout>
