---
interface Props {
  about: {
    title: string;
    paragraphs: string[];
    location: string;
  };
  contact: {
    email: string;
    linkedin: string;
    github: string;
  };
}

const { about, contact } = Astro.props;

const techIcons = [
  { name: 'Python', url: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/python/python-original.svg' },
  { name: 'Go', url: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/go/go-original.svg' },
  { name: 'R', url: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/r/r-original.svg' },
  { name: 'Docker', url: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/docker/docker-original.svg' },
  { name: 'PostgreSQL', url: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/postgresql/postgresql-original.svg' },
  { name: 'Java', url: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/java/java-original.svg' },
  { name: 'Bash', url: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/bash/bash-original.svg' },
  { name: 'Git', url: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/git/git-original.svg' },
  { name: 'Linux', url: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/linux/linux-original.svg' },
  { name: 'C++', url: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/cplusplus/cplusplus-original.svg' },
  { name: 'JavaScript', url: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/javascript/javascript-original.svg' },
  { name: 'Scala', url: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/scala/scala-original.svg' },
];
---

<section id="about" class="py-20 md:py-28">
  <div class="max-w-5xl mx-auto px-6">
    <div class="grid md:grid-cols-3 gap-12 md:gap-16">
      <!-- Profile image + links -->
      <div class="observe-fade">
        <div class="relative mb-6">
          <img
            src="/images/profile.jpg"
            alt="Daniel Alconchel"
            class="w-full aspect-[3/4] object-cover object-top rounded-2xl"
          />
          <div class="absolute bottom-3 left-3 bg-white/90 dark:bg-ink-900/90 backdrop-blur-sm px-3 py-1.5 rounded-full">
            <p class="text-xs font-mono flex items-center gap-1.5">
              <span class="w-2 h-2 rounded-full bg-green-500 inline-block"></span>
              {about.location}
            </p>
          </div>
        </div>
        <!-- Social links -->
        <div class="flex gap-3">
          <a href={contact.github} target="_blank" rel="noopener" class="p-2.5 rounded-xl border border-sand-200 dark:border-ink-800 hover:border-sand-400 dark:hover:border-ink-600 transition-colors" aria-label="GitHub">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
          </a>
          <a href={contact.linkedin} target="_blank" rel="noopener" class="p-2.5 rounded-xl border border-sand-200 dark:border-ink-800 hover:border-sand-400 dark:hover:border-ink-600 transition-colors" aria-label="LinkedIn">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          </a>
          <a href={`mailto:${contact.email}`} class="p-2.5 rounded-xl border border-sand-200 dark:border-ink-800 hover:border-sand-400 dark:hover:border-ink-600 transition-colors" aria-label="Email">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
          </a>
        </div>
      </div>

      <!-- About text -->
      <div class="md:col-span-2 observe-fade">
        <h2 class="section-heading">{about.title}</h2>
        {about.paragraphs.map((p: string) => (
          <p class="text-ink-600 dark:text-sand-300 leading-relaxed mb-4">{p}</p>
        ))}

        <!-- Tech icons -->
        <div class="mt-8 pt-6 border-t border-sand-200 dark:border-ink-800">
          <div class="flex flex-wrap gap-4 items-center">
            {techIcons.map((icon) => (
              <img
                src={icon.url}
                alt={icon.name}
                title={icon.name}
                class="tech-icon"
                loading="lazy"
              />
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
